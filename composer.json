{
    "name": "mesamatrix/mesamatrix",
    "description": "Mesamatrix website",
    "license": "AGPL-3.0-or-later",
    "type": "project",
    "homepage": "https://mesamatrix.net",

    "authors": [
        {
            "name": "Romain Failliot",
            "email": "romain.failliot@foolstep.com"
        }
    ],

    "config": {
        "platform": {
            "php": "8.2"
        }
    },

    "require": {
        "monolog/monolog": "^3",
        "suin/php-rss-writer": "^1",
        "symfony/console": "^7",
        "symfony/error-handler": "^7",
        "symfony/http-kernel": "^7",
        "symfony/monolog-bridge": "^7",
        "symfony/process": "^7"
    },

    "require-dev": {
        "squizlabs/php_codesniffer": "^3",
        "phpunit/phpunit": "^11"
    },

    "autoload": {
        "psr-4": {
            "Mesamatrix\\": "src/"
        }
    },

    "scripts": {
        "lint": "./vendor/bin/phpcs --standard=ruleset.xml",
        "tests": "./vendor/bin/phpunit tests"
    }
}
